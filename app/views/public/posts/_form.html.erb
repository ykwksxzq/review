<h5>投稿画像</h5>
<%= f.file_field :image, accept: "image/*" %>

<h5>タイトル</h5>
<%= f.text_field :title %>

<h5>コメント</h5>
<%= f.text_field :content %>

<h5>価格</h5>
<%= f.number_field :price %>

<%= f.label :genre_id, "ショップ" %>
<div class="select_field"><%= f.collection_select :shop_id, Shop.all, :id, :name %>

<%= f.label :genre_id, "ジャンル" %>
<div class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name %>


  <div class="field">
    <%= f.label :rating, "評価" %>
    <%= f.select :rating, (1..5).to_a %>
  </div>
  <div class="field">
    <%= f.text_field :tag, placeholder: "タグを複数つけるには' , 'で区切ってください" %>
  </div>
